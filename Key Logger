<body>

<div class="container">
    <h1> : Simple Keylogger</h1>

    <div class="notice">
        ⚠️ This is simple key logger created by Taofeek 
    </div>

    <textarea id="inputArea" placeholder="Type here... keystrokes will be logged"></textarea>

    <button onclick="downloadLog()">Save Keystroke Log</button>
</div>

<script>
    let keyLog = "";

    document.getElementById("inputArea").addEventListener("keydown", function(event) {
        const key = event.key;
        const timestamp = new Date().toISOString();
        keyLog += `[${timestamp}] Key pressed: ${key}\n`;
    });

    function downloadLog() {
        const blob = new Blob([keyLog], { type: "text/plain" });
        const link = document.createElement("a");
        link.href = URL.createObjectURL(blob);
        link.download = "keystroke_log.txt";
        link.click();
    }
</script>

